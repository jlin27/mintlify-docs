{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "0x",
  "colors": {
    "primary": "#25272a",
    "light": "#f3f4f5",
    "dark": "#25272a"
  },
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient"
  },
  "fonts": {
    "heading": {
      "family": "PolySans",
      "weight": 400,
      "source": "https://cdn.prod.website-files.com/66967cfef0a246cbbb9aee94/66967cfef0a246cbbb9aeee8_PolySans-Median.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "PolySans",
      "weight": 400,
      "source": "https://cdn.prod.website-files.com/66967cfef0a246cbbb9aee94/66967cfef0a246cbbb9aeeea_PolySans-Neutral.woff2",
      "format": "woff2"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "icon": "house",
        "pages": ["index"]
      },
      {
        "tab": "Docs",
        "icon": "book-open",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "docs/category/introduction",
              "docs/introduction/welcome",
              "docs/introduction/getting-started",
              "docs/introduction/introduction-to-0x"
            ]
          },
          {
            "group": "Swap API",
            "pages": [
              "docs/0x-swap-api/introduction",
              {
                "group": "Additional Topics",
                "pages": [
                  "docs/0x-swap-api/advanced-topics/how-to-set-your-token-allowances",
                  "docs/0x-swap-api/advanced-topics/handling-native-tokens"
                ]
              }
            ]
          },
          {
            "group": "Gasless API",
            "pages": [
              "docs/gasless-api/introduction",
              "docs/gasless-api/gasless-faq"
            ]
          },
          {
            "group": "Trade Analytics API",
            "pages": ["docs/trade-analytics-api/introduction"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "code-simple",
        "openapi": "openapi.yaml"
      },
      {
        "tab": "Changelog",
        "icon": "bullhorn",
        "pages": ["docs/changelog"]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Help Center",
          "href": "https://help.0x.org/",
          "icon": "circle-question"
        },
        {
          "anchor": "Community",
          "href": "https://discord.com/invite/official0x",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://0x.org/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://0x.org"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact Us",
        "href": "https://0x.org/contact"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Go to dashboard",
      "href": "https://dashboard.0x.org/create-account"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/0xProject",
      "github": "https://github.com/0xProject",
      "reddit": "https://www.reddit.com/r/0xProject",
      "discord": "https://discord.com/invite/official0x"
    }
  }
}
